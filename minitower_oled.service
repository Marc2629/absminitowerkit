[Unit]
Description=Minitower Service
DefaultDependencies=no
StartLimitIntervalSec=60
StartLimitBurst=5

[Service]
RootDirectory=/
User=root
Type=simple
ExecStart=sudo /usr/bin/python3 /usr/local/luma.examples/examples/sys_info.py & 
RemainAfterExit=yes
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target
